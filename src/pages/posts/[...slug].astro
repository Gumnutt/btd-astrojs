---
import { getCollection, type CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';

import moment from "moment"
import {marked} from "marked"

import PostLayout from "../../layouts/PostLayout.astro"

export async function getStaticPaths() {
  const blogPosts = await getCollection('posts');
  return blogPosts.map((post) => ({
    params: { 
      title: post.data.title, 
      slug: post.slug, 
      published: moment(post.data.published).format("MMMM Do, YYYY"),
    },
    props: post,
  }));
}

const post = Astro.props as CollectionEntry<'posts'>

---

<PostLayout title={post.data.title} post={post}>
  <Fragment set:html={marked.parse(post.body)} />
  <script is:inline src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/prism.min.js"></script>
  <script is:inline>
    Prism.highlightAll()
  </script>
</PostLayout>
